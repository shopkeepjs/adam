{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"$lib": ["./src/lib"],
			"$lib/*": ["./src/lib/*"],
			"$components": ["./src/components"],
			"$components/*": ["./src/components/*"]
		},
		"outDir": "./build",
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
	},

	"include": [
		"./src/**/*.js",
		"./src/**/*.ts",
		"./src/**/*.svelte",
		"*.cjs",
		".*.cjs",
		"*.js",
		"*.ts",
		"**/*.tsx",
		".eslintrc.cjs",
		"**/*.test.ts"
	]
}

